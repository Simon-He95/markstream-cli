{
  "name": "markstream-cli",
  "type": "module",
  "version": "0.0.1",
  "description": "",
  "author": "Simon He",
  "license": "MIT",
  "funding": "https://github.com/sponsors/Simon-He95",
  "homepage": "https://github.com/Simon-He95/markstream-cli#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Simon-He95/markstream-cli.git"
  },
  "bugs": "https://github.com/Simon-He95/markstream-cli/issues",
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "bin": {
    "run": "./cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "npm run build -- --watch src",
    "format": "prettier --cache --write .",
    "lint": "eslint . --cache",
    "lint:fix": "pnpm run lint --fix",
    "prepublishOnly": "nr build",
    "release": "bumpp && npm publish",
    "start": "esno src/index.ts",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "demo:stream": "tsx scripts/demo-stream.ts",
    "demo:type": "tsx scripts/demo-type.ts",
    "demo:replace": "tsx scripts/demo-replace.ts",
    "demo:highlight-md": "tsx scripts/demo-highlight-markdown-stream.ts",
    "demo:all-color": "tsx scripts/demo-all-syntax-color-stream.ts",
    "build:terminal": "npm --prefix packages/terminal run build"
  },
  "dependencies": {
    "@shikijs/vscode-textmate": "^10.0.2",
    "ansis": "^4.2.0",
    "markstream-terminal": "workspace:^",
    "shiki": "^3.20.0",
    "stream-markdown-parser": "^0.0.51"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.19.0",
    "@sxzz/prettier-config": "^2.2.6",
    "@types/node": "^18.19.130",
    "bumpp": "^8.2.1",
    "eslint": "^9.39.2",
    "lint-staged": "^13.3.0",
    "picocolors": "^1.1.1",
    "prettier": "^3.7.4",
    "rimraf": "^3.0.2",
    "tsdown": "^0.9.9",
    "tsx": "^3.14.0",
    "typescript": "^4.9.5",
    "vitest": "^0.15.2"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "*.{vue,js,ts,jsx,tsx,md,json}": "eslint --fix"
  },
  "prettier": "@sxzz/prettier-config"
}
