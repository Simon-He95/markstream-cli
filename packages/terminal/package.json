{
  "name": "markstream-terminal",
  "type": "module",
  "version": "0.0.1",
  "description": "Small, pragmatic ANSI terminal editing helpers (anchored redraw, range replace, streaming-friendly sessions).",
  "author": "Simon He",
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "README.md",
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "npm run build -- --watch src",
    "typecheck": "tsc --noEmit"
  }
}
